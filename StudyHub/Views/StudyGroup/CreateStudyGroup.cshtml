@model StudyGroupModel

@{
    ViewBag.Title = "Novo Grupo de Estudo";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Novo Grupo de Estudo</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .form-container {
            max-width: 400px;
            margin: auto;
            margin-top: 50px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            text-align: center;
        }

            .form-container button {
                margin-top: 15px;
                border: 1px solid #007bff;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Novo Grupo de Estudo</h2>

        <div class="form-container">
            <form asp-controller="StudyGroup" asp-action="CreateStudyGroup" method="post">
                <div class="form-group">
                    <label for="titulo">Título:</label>
                    <input type="text" asp-for="Title" class="form-control" id="titulo" placeholder="Insira o título">
                    @* @Html.ValidationMessageFor(model => model.Title) *@
                </div>

                <div class="form-group">
                    <label for="descricao">Descrição:</label>
                    <textarea asp-for="Description" class="form-control" id="descricao" placeholder="Insira a descrição"></textarea>
                    @* @Html.ValidationMessageFor(model => model.Description) *@
                </div>

                <div class="form-group">
                    <label for="link">Link:</label>
                    <input type="text" asp-for="Link" class="form-control" id="link" placeholder="Insira o link">
                    @* @Html.ValidationMessageFor(model => model.Link) *@
                </div>

                <button type="submit" class="btn btn-primary btn-block">Salvar</button>
            </form>
        </div>
    </div>
</body>
</html>
